<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/libui_barview_mainbg_grey"
    android:clickable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/libui_barview_bottom_margin"
            android:background="@color/black">

            <com.yalantis.ucrop.view.UCropView
                android:id="@+id/ucv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/libui_func_bar_height"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/libui_bottom_title_bar_height"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_scale_middle"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/xml_shape_sj" />

            <com.picspool.snappic.view.CSMyHorizontalScrollView
                android:id="@+id/hor_scrollview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:scrollbars="none">

                <com.picspool.snappic.view.CSRuleView
                    android:id="@+id/rv_rotate_angle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.picspool.snappic.view.CSMyHorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_ratio"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/libui_bottom_title_bar_height"
            android:layout_gravity="bottom"
            android:background="@color/libui_barview_mainbg_white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="top"
                android:background="@color/libui_barview_line_grey" />

            <FrameLayout
                android:id="@+id/ly_cancel"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/libui_cancel_icon_width"
                    android:layout_height="@dimen/libui_cancel_icon_width"
                    android:layout_gravity="center"
                    android:src="@drawable/xml_top_cancel" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/libui_barview_title_crop"
                android:textColor="@color/libui_barview_txt_grey"
                android:textSize="@dimen/libui_barmainview_title_txtsize" />

            <FrameLayout
                android:id="@+id/ly_confirm"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <ImageView
                    android:layout_width="@dimen/libui_ok_icon_width"
                    android:layout_height="@dimen/libui_ok_icon_width"
                    android:layout_gravity="center"
                    android:src="@drawable/xml_top_ok" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_crop_wh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />
</FrameLayout>
