<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/bottom_bg_color">

    <HorizontalScrollView
        android:id="@+id/bottom_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/bottom_button_fl"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/ly_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_add_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_ly_add"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_add" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_add_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_add_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_add"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_layout_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_layout"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_layout" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_layout_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_layout_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_layout"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_background_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_background"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_background_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_background_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_background"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_space"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_space_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_space"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_border" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_space_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_space_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/square_borde"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_margin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_margin_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_margin"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/frame" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_margin_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_margin_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_space"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_blur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_blur_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_blur"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/square_blur" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_blur_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_blur_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_blur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_blur"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_adjust"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_adjust_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_adjust"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_adjust" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_adjust_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_adjust_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_adjust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Adjust"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_filter_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_filter"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_filter" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_filter_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_filter_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_filter"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_glitch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_glitch_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_glitch"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_glitch" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_glitch_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_glitch_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_glitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Glitch"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_text_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_text"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_text" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_text_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_text_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_text"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_sticker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_sticker_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_sticker"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_sticker" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sticker_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_sticker_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_sticker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_sticker"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_masic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_masic_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_masic"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xml_square_filter" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_masic_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_masic_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_masic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_masic"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ly_ratio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_ratio_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_ratio"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/square_ratio" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ratio_text"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/rl_ratio_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/bottom_ratio"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
