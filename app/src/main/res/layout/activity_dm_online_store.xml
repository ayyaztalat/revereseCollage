<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">

    <FrameLayout
        android:id="@+id/activity_store_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#00ace3">

        <FrameLayout
            android:id="@+id/activity_store_break"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:src="@drawable/dm_main_instasquare_temp" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/dm_btn_back_version" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_store_button_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/activity_store_top_bar">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/dm_store_button_bar_bg_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_store_no_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/content" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/store_gray_color" />

            <TextView
                android:id="@+id/activity_store_exist_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/downloaded" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_store_list_view_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_store_button_bar"
        android:layout_alignParentBottom="true">

        <ListView
            android:id="@+id/activity_store_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp" />
    </FrameLayout>
</RelativeLayout>
