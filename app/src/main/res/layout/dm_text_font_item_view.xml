<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/font_layout_h"
    android:gravity="center"
    android:minHeight="@dimen/font_layout_h"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/font_name1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/font_text_size" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/text_adjust_left_main" />

    <TextView
        android:id="@+id/font_name2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/font_text_size" />
</LinearLayout>
