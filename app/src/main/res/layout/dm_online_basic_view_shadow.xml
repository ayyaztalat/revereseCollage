<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="@dimen/basic_text_size" android:textColor="@color/text_color" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/basic_align"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="50dp">
                <LinearLayout android:id="@+id/shadow_align_left" style="@style/align_button_ll">
                    <com.picspool.instatextview.utils.DMSelectorImageView android:id="@+id/shadow_align_left_img" android:layout_width="@dimen/basic_shadow_align_image_size" android:layout_height="@dimen/basic_shadow_align_image_size"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/shadow_align_centre" style="@style/align_button_ll">
                    <com.picspool.instatextview.utils.DMSelectorImageView android:id="@+id/shadow_align_centre_img" android:layout_width="@dimen/basic_shadow_align_image_size" android:layout_height="@dimen/basic_shadow_align_image_size"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/shadow_align_right" style="@style/align_button_ll">
                    <com.picspool.instatextview.utils.DMSelectorImageView android:id="@+id/shadow_align_right_img" android:layout_width="@dimen/basic_shadow_align_image_size" android:layout_height="@dimen/basic_shadow_align_image_size"/>
                </LinearLayout>
            </LinearLayout>
            <SeekBar android:layout_gravity="center_vertical" android:id="@+id/seekBar1" android:paddingLeft="@dimen/seek_bar_padding" android:paddingRight="@dimen/seek_bar_padding" android:layout_width="@dimen/basic_shadow_seekbar_w" android:layout_height="wrap_content" android:maxHeight="@dimen/basic_seekbar_h" android:max="255" android:progress="0" android:progressDrawable="@drawable/dm_online_shadow_alpha_seekbar" android:minHeight="@dimen/basic_seekbar_h" android:thumb="@drawable/dm_text_seekbar_button"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="@dimen/basic_text_size" android:textColor="@color/text_color" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/basic_shadow"/>
        <HorizontalScrollView android:layout_width="wrap_content" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent">
                <LinearLayout android:id="@+id/button_left_top_shadow" style="@style/basic_shadow_button_ll">
                    <com.picspool.instatextview.utils.DMSelectorImageView android:id="@+id/button_left_top_shadow_img" android:layout_width="@dimen/basic_shadow_image_size" android:layout_height="@dimen/basic_shadow_image_size"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/button_left_bottom_shadow" style="@style/basic_shadow_button_ll">
                    <com.picspool.instatextview.utils.DMSelectorImageView android:id="@+id/button_left_bottom_shadow_img" android:layout_width="@dimen/basic_shadow_image_size" android:layout_height="@dimen/basic_shadow_image_size"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/button_top_shadow" style="@style/basic_shadow_button_ll">
                    <com.picspool.instatextview.utils.DMSelectorImageView android:id="@+id/button_top_shadow_img" android:layout_width="@dimen/basic_shadow_image_size" android:layout_height="@dimen/basic_shadow_image_size"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/button_right_top_shadow" style="@style/basic_shadow_button_ll">
                    <com.picspool.instatextview.utils.DMSelectorImageView android:id="@+id/button_right_top_shadow_img" android:layout_width="@dimen/basic_shadow_image_size" android:layout_height="@dimen/basic_shadow_image_size"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/button_right_bottom_shadow" style="@style/basic_shadow_button_ll">
                    <com.picspool.instatextview.utils.DMSelectorImageView android:id="@+id/button_right_bottom_shadow_img" android:layout_width="@dimen/basic_shadow_image_size" android:layout_height="@dimen/basic_shadow_image_size"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/button_bottom_shadow" style="@style/basic_shadow_button_ll">
                    <com.picspool.instatextview.utils.DMSelectorImageView android:id="@+id/button_bottom_shadow_img" android:layout_width="@dimen/basic_shadow_image_size" android:layout_height="@dimen/basic_shadow_image_size"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/basic_text_size" android:textColor="@color/text_color" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/basic_stroke"/>
            <LinearLayout android:gravity="center" android:id="@+id/button_basic_Stroke" android:layout_width="@dimen/basic_stoke_switch_w" android:layout_height="match_parent">
                <ImageView android:id="@+id/imageView6" android:layout_width="@dimen/basic_stoke_switch_image_w" android:layout_height="wrap_content" android:src="@drawable/dm_button_selector_basic_switch"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/basic_underline_layout_h">
            <com.picspool.lib.widget.colorgallery.DMColorGalleryView android:id="@+id/stoke_color_gallery_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
