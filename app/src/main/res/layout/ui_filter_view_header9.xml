<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/bottom_tools_headler_height">

    <FrameLayout
        android:layout_width="@dimen/fliter_group_head_img_width"
        android:layout_height="@dimen/bottom_tools_headler_height">

        <com.photo.editor.square.splash.view.filterbar.CSRoundedCornerImageView
            android:id="@+id/img_FilterGroup_icon9"
            android:layout_width="@dimen/fliter_group_head_img_width_content"
            android:layout_height="@dimen/fliter_group_head_img_height"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            app:cornerRadius="8dp" />

        <TextView
            android:id="@+id/txt_name9"
            android:layout_width="@dimen/fliter_group_head_img_width"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
    </FrameLayout>
</RelativeLayout>
