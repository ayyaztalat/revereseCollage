<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/main_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="11dp"
            android:text="Border"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:visibility="gone" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/group_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main_bg_color"
            app:tabIndicatorHeight="0dp"
            app:tabMode="auto"
            app:tabPaddingEnd="0dp"
            app:tabPaddingStart="0dp" />

        <ImageView
            android:id="@+id/img_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="17dp"
            android:background="@color/main_bg_color"
            android:src="@drawable/img_done" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp">

        <HorizontalScrollView
            android:id="@+id/hrzScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:isScrollContainer="false"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:el_contentLayout="@layout/ui_filter_view_content"
                    app:el_headerLayout="@layout/ui_filter_view_header" />

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:el_contentLayout="@layout/ui_filter_view_content1"
                    app:el_headerLayout="@layout/ui_filter_view_header1" />

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:el_contentLayout="@layout/ui_filter_view_content2"
                    app:el_headerLayout="@layout/ui_filter_view_header2" />

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:el_contentLayout="@layout/ui_filter_view_content3"
                    app:el_headerLayout="@layout/ui_filter_view_header3" />

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:el_contentLayout="@layout/ui_filter_view_content4"
                    app:el_headerLayout="@layout/ui_filter_view_header4" />

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:el_contentLayout="@layout/ui_filter_view_content5"
                    app:el_headerLayout="@layout/ui_filter_view_header5" />

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:el_contentLayout="@layout/ui_filter_view_content6"
                    app:el_headerLayout="@layout/ui_filter_view_header6" />

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:el_contentLayout="@layout/ui_filter_view_content7"
                    app:el_headerLayout="@layout/ui_filter_view_header7" />

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:el_contentLayout="@layout/ui_filter_view_content8"
                    app:el_headerLayout="@layout/ui_filter_view_header8" />

                <com.photo.editor.square.splash.view.filterbar.CSExpandableLayout
                    android:id="@+id/filtergroup9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:el_contentLayout="@layout/ui_filter_view_content9"
                    app:el_headerLayout="@layout/ui_filter_view_header9" />
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/btn_filter_like"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="top|right"
            android:paddingLeft="20dp"
            android:paddingRight="18dp"
            android:paddingBottom="17dp"
            android:src="@drawable/xml_filter_ui_like"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:id="@+id/filter_close"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="bottom"
        android:scaleType="centerInside"
        android:visibility="gone" />
</FrameLayout>
