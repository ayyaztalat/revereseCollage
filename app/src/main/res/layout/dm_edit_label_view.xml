<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/edit_label_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/eidt_label_toor_layout"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:background="@color/edit_top_block_color" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@color/edit_top_block_color" />

        <com.picspool.instatextview.edit.DM_TextFixedView
            android:id="@+id/label_fixed_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:inputType="text" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/eidt_label_toor_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dm_text_tool_bar_shape"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/button_label_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_label_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dm_button_selector_ll_back" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_label_ok"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_label_ok"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dm_button_selector_ll_ok" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
