<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_splashbar_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/libui_barview_mainbg_grey">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <FrameLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/libui_barview_bottom_margin"
        android:padding="@dimen/libui_barmainview_margin">

        <com.picspool.snappic.view.CSSplashShapeView
            android:id="@+id/splash_shapeview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/ly_funcbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/libui_func_bar_height"
        android:layout_gravity="bottom"
        android:background="@color/libui_barview_mainbg_white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="match_parent"
                    android:minWidth="450dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/splashShape1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.picspool.snappic.view.CSSplashSelectView
                                android:id="@+id/shape1"
                                android:layout_width="57dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/splashShape2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <com.picspool.snappic.view.CSSplashSelectView
                                android:id="@+id/shape2"
                                android:layout_width="57dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/splashShape3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <com.picspool.snappic.view.CSSplashSelectView
                                android:id="@+id/shape3"
                                android:layout_width="57dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/splashShape4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <com.picspool.snappic.view.CSSplashSelectView
                                android:id="@+id/shape4"
                                android:layout_width="57dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/splashShape5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <com.picspool.snappic.view.CSSplashSelectView
                                android:id="@+id/shape5"
                                android:layout_width="57dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/splashShape6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <com.picspool.snappic.view.CSSplashSelectView
                                android:id="@+id/shape6"
                                android:layout_width="57dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/libui_bottom_title_bar_height"
        android:layout_gravity="bottom"
        android:background="@color/libui_barview_mainbg_white"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:background="@color/libui_barview_line_grey" />

        <FrameLayout
            android:id="@+id/ly_cancel"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/overlayBack"
                android:layout_width="@dimen/libui_cancel_icon_width"
                android:layout_height="@dimen/libui_cancel_icon_width"
                android:layout_gravity="center"
                android:src="@drawable/xml_top_cancel" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/libui_barview_title_splash"
            android:textColor="@color/libui_barview_txt_grey"
            android:textSize="@dimen/libui_barmainview_title_txtsize" />

        <FrameLayout
            android:id="@+id/ly_confirm"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right">

            <ImageView
                android:id="@+id/overlayAccept"
                android:layout_width="@dimen/libui_ok_icon_width"
                android:layout_height="@dimen/libui_ok_icon_width"
                android:layout_gravity="center"
                android:src="@drawable/xml_top_ok" />
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
