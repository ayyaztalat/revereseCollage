<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/libui_barview_bottom_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <FrameLayout
        android:id="@+id/ly_bgeffect_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/libui_barview_mainbg_white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="top">

            <FrameLayout
                android:id="@+id/ly_cancel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="top">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/libui_barview_down" />
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="30dp">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/img_funcicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/square_editor_blur" />
            </FrameLayout>

            <SeekBar
                android:id="@+id/seekbar_main"
                style="@style/MySeekBarStyle"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp" />

            <FrameLayout
                android:id="@+id/ly_photoselector"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/img_photoselector"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/square_select_photo" />
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="95dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
