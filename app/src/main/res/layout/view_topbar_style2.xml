<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/main_color">

    <FrameLayout
        android:id="@+id/ly_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back_black" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_title"
        style="@style/topbar_title_text_style"
        android:text=" " />

    <FrameLayout
        android:id="@+id/ly_done"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/bg"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/small_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/btn_single_top_save" />

            <TextView
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/topbar_save"
                android:textColor="#fff"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_save_light"
            android:layout_width="12dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-12dp"
            android:src="@drawable/img_topsave_light_anim"
            android:visibility="gone" />
    </FrameLayout>
</FrameLayout>
