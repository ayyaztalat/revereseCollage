<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/libui_barview_mainbg_grey">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/libui_barview_bottom_margin">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/libui_barmainview_margin">

            <com.picspool.libfuncview.slimbody.CSSlimFaceView
                android:id="@+id/ivt_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_src"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:visibility="gone" />

            <com.picspool.libfuncview.view.CSTipsView
                android:id="@+id/ly_tips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:tips_drawable="@drawable/img_tipswindow_slimbody"
                app:tips_message="@string/libui_tipswindow_message_slimebody" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_preview_left"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:background="@drawable/img_preview_window_bg"
            android:scaleType="matrix"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_preview_point"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/slim_canvas_white" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_compare"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/libui_btn_compare_bottom_margin"
        android:background="@drawable/btn_beauty_contrast_bg"
        android:scaleType="centerInside"
        android:src="@drawable/btn_beauty_contrast" />

    <LinearLayout
        android:id="@+id/ly_funcbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/libui_func_bar_height"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/libui_bottom_title_bar_height"
        android:background="@color/libui_barview_mainbg_white"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:weightSum="10">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@color/libui_barview_line_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="5">

                <FrameLayout
                    android:id="@+id/ly_point_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:background="@drawable/xml_path_width_point" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ly_point_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:background="@drawable/xml_path_width_point" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ly_point_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/xml_path_width_point" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ly_point_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/xml_path_width_point" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ly_point_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:background="@drawable/xml_path_width_point" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_revoke"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/ly_undo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/libui_do_left_disable" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ly_redo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/libui_do_right_disable" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/libui_bottom_title_bar_height"
        android:layout_gravity="bottom"
        android:background="@color/libui_barview_mainbg_white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:background="@color/libui_barview_line_grey" />

        <FrameLayout
            android:id="@+id/ly_cancel"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/libui_cancel_icon_width"
                android:layout_height="@dimen/libui_cancel_icon_width"
                android:layout_gravity="center"
                android:src="@drawable/xml_top_cancel" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/libui_barview_title_slimebody"
            android:textColor="@color/libui_barview_txt_grey"
            android:textSize="@dimen/libui_barmainview_title_txtsize" />

        <FrameLayout
            android:id="@+id/ly_confirm"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="@dimen/libui_ok_icon_width"
                android:layout_height="@dimen/libui_ok_icon_width"
                android:layout_gravity="center"
                android:src="@drawable/xml_top_ok" />
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
